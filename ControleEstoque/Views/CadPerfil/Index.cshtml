@using ControleEstoque.Models
@model List<ControleEstoque.Models.PerfilModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Grupo de Perfis";
    ViewBag.Lista = Model;
}

@section Styles {
    <link href="~/Content/bootstrap-select.css" rel="stylesheet"/>
    <link href="~/Content/Cadastro/Perfil.css" rel="stylesheet"/>
}

@section TituloGrid {
    <th>Nome</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section CamposCadastro {
    <div class="row">
        <div class="form-group">
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.CheckBox("cbx_ativo")
            </div>
        </div>
        <div class="form-group" style="margin: 0 10px 0 10px">
            <div class="col-md-9">
                <h4 class="text-center">Usuários</h4>
                <div class="well" style="max-height: 300px; padding: 5px; margin: 0px; overflow: auto">
                    <ul id="lista_usuario" class="list-group checked-list-box" style="margin-bottom: 0">
                        @foreach (var usuario in (List<UsuarioModel>)ViewBag.ListaUsuario)
                        {
                            <li class="list-group-item">
                                <label style="margin-bottom: 0">
                                    <input type="checkbox" data-id-usuario="@usuario.Id" /> @usuario.Nome
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script>
            var titulo_pagina = '@ViewBag.Title';
            var url_excluir = '@Url.Action("ExcluirPerfil", "CadPerfil")';
            var url_confirmar = '@Url.Action("SalvarPerfil", "CadPerfil")';
            var url_page_click = '@Url.Action("PerfilPagina", "CadPerfil")';
            var url_tam_page_change = '@Url.Action("PerfilPagina", "CadPerfil")';
            var url_alterar = '@Url.Action("RecuperarPerfil", "CadPerfil")';
            var linhas = [];
            @{
                var linha = 0;
                foreach (var item in Model)
                {
                    linha++;
                    if (linha <= ViewBag.QuantMaxLinhasPorPagina)
                    {
                        @:linhas.push(@Html.Raw(Json.Encode(item)));
                    }
                    else
                    {
                        break;
                    }
                }
            }
    </script>
    <script id="template-grid" type="x-tmpl-mustache">
        <tr data-id="{{ Id }}">
            <td>{{ Nome }}</td>
            <td>{{ #Ativo }}SIM{{ /Ativo }}{{ ^Ativo }}NÃO{{ /Ativo }}</td>
            <td>
                <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
            </td>
        </tr>
    </script>
    <script src="~/Scripts/Cadastro/Perfil.js"></script>
}